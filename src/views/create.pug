extends layout

block content
    .page-header
        h1 Create New Content
        p Create a new blog or vlog (single or bulk)
    
    .create-container
        .selector-group
            .form-group
                label(for="content-type") Content Type
                select#content-type.form-select
                    option(value="blog") üìù Blog
                    option(value="vlog") üé• Vlog
            
            .form-group
                label(for="create-mode") Creation Mode
                select#create-mode.form-select
                    option(value="single") Single Item
                    option(value="bulk") Bulk Upload (JSON)
        
        #single-form.form-container
            h3#form-title Create Blog
            form#create-form
                .form-group
                    label(for="title") Title *
                    input#title(type="text" name="title" required maxlength="200")
                
                .form-group
                    label(for="excerpt") Excerpt *
                    textarea#excerpt(name="excerpt" required maxlength="500" rows="3")
                
                .form-group
                    label(for="content") Content *
                    textarea#content(name="content" required rows="10")
                
                .form-group
                    label(for="slug") Slug *
                    input#slug(type="text" name="slug" required maxlength="255")
                    small.help-text URL-friendly version of the title
                
                .form-group
                    label(for="tags") Tags (comma separated)
                    input#tags(type="text" name="tags" placeholder="technology, programming, tutorial")
                
                #vlog-fields.hidden
                    .form-group
                        label(for="videoUrl") Video URL *
                        input#videoUrl(type="url" name="videoUrl" placeholder="https://example.com/video.mp4")
                        small.help-text Direct link to the video file
                
                button.btn.btn-primary(type="submit") Create
        
        #bulk-form.form-container.hidden
            h3#bulk-form-title Create Multiple Blogs
            .info-box
                p Enter a JSON array of items to create. Each item should have the required fields.
                details
                    summary Example Format
                    pre.example-json.
                        [
                          {
                            "Title": "My First Blog",
                            "Excerpt": "A short description",
                            "Content": "Full content here",
                            "Slug": "my-first-blog",
                            "Tags": ["tech", "tutorial"]
                          }
                        ]
            .form-group
                label(for="bulk-json") JSON Array *
                textarea#bulk-json(name="bulk-json" required rows="15")
            
            button.btn.btn-primary(onclick="submitBulk()") Create Bulk
        
        #result-container

block scripts
    script(src="/js/create.js")
